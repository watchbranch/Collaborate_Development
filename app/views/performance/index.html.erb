<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        .button-container {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            justify-content: center;
            margin-top: 50px;
        }
        button {
            width: 80px;
            height: 80px;
            border: none;
            color: white;
            font-size: 24px;
            border-radius: 10px;
            cursor: pointer;
        }
        .btn1 { background-color: #FF5733; }
        .btn2 { background-color: #FFBD33; }
        .btn3 { background-color: #DFFF33; }
        .btn4 { background-color: #75FF33; }
        .btn5 { background-color: #33FF57; }
        .btn6 { background-color: #33FFBD; }
        .btn7 { background-color: #339FFF; }
        .btn8 { background-color: #8D33FF; }
        .btn9 { background-color: #FF33A6; }
    </style>
</head>
<body>
    <div class="button-container">
        <% random_audio_file = get_random_audio_file %>
        <P><%#= random_audio_file %></P>
        <%= audio_tag random_audio_file, autoplay: true, controls: true %>
    </div>
    <form action="/performance/submit" method="POST">
        <div class="button-container">

            <% is_display1 = is_button_display(1) %>
            <% if is_display1 %>
                <button type="submit" name="value" value="1" class="btn1">C</button>
	        <% else %>
		        <button type="submit" name="value" value="1" class="btn1" style="display: none;">C</button>
	        <% end %>

            <% is_display2 = is_button_display(2) %>
            <% if is_display2 %>
                <button type="submit" name="value" value="2" class="btn2">F²</button>
	        <% else %>
		        <button type="submit" name="value" value="2" class="btn2" style="display: none;">F²</button>
	        <% end %>

            <% is_display3 = is_button_display(3) %>
            <% if is_display3 %>
                <button type="submit" name="value" value="3" class="btn3">G¹</button>
	        <% else %>
		        <button type="submit" name="value" value="3" class="btn3" style="display: none;">G¹</button>
	        <% end %>

            <% is_display4 = is_button_display(4) %>
            <% if is_display4 %>
                <button type="submit" name="value" value="4" class="btn4">F¹</button>
	        <% else %>
		        <button type="submit" name="value" value="4" class="btn4" style="display: none;">F¹</button>
	        <% end %>

            <% is_display5 = is_button_display(5) %>
            <% if is_display5 %>
                <button type="submit" name="value" value="5" class="btn5">G²</button>
	        <% else %>
		        <button type="submit" name="value" value="5" class="btn5" style="display: none;">G²</button>
	        <% end %>

            <% is_display6 = is_button_display(6) %>
            <% if is_display6 %>
                <button type="submit" name="value" value="6" class="btn6">C¹</button>
	        <% else %>
		        <button type="submit" name="value" value="6" class="btn6" style="display: none;">C¹</button>
	        <% end %>

            <% is_display7 = is_button_display(7) %>
            <% if is_display7 %>
                <button type="submit" name="value" value="7" class="btn7">F</button>
	        <% else %>
		        <button type="submit" name="value" value="7" class="btn7" style="display: none;">F</button>
	        <% end %>

            <% is_display8 = is_button_display(8) %>
            <% if is_display8 %>
                <button type="submit" name="value" value="8" class="btn8">G</button>
	        <% else %>
		        <button type="submit" name="value" value="8" class="btn8" style="display: none;">G</button>
	        <% end %>

            <% is_display9 = is_button_display(9) %>
            <% if is_display9 %>
                <button type="submit" name="value" value="9" class="btn9">C²</button>
	        <% else %>
		        <button type="submit" name="value" value="9" class="btn9" style="display: none;">C²</button>
	        <% end %>

        </div>
    </form>
</body>
</html>
